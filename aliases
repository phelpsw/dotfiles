# ls aliases
alias ll='ls -l'
alias la='ls -a'
alias ltr='ls -ltr'

alias sar='ssh pwilliams@quasar'
alias per='ssh pwilliams@supernova'
alias vpnen='~/dotfiles/vpn_enable.sh'
alias vpndis='~/dotfiles/vpn_disable.sh'
